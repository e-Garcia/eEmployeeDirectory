<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/spacing_medium">

    <ImageView
        android:id="@+id/iv_directory_photo"
        android:layout_width="@dimen/directory_photo_size"
        android:layout_height="@dimen/directory_photo_size"
        android:contentDescription="@string/profile_picture_content_description"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_directory_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/spacing_small"
        app:layout_constraintStart_toEndOf="@id/iv_directory_photo"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_directory_team"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/spacing_small"
        app:layout_constraintStart_toEndOf="@id/iv_directory_photo"
        app:layout_constraintTop_toBottomOf="@id/tv_directory_name" />

</androidx.constraintlayout.widget.ConstraintLayout>